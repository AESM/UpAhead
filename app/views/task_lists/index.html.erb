<p id="notice"><%= notice %></p>

<h1>Listing Task Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @task_lists.each do |task_list| %>
      <tr id="<%= dom_id(task_list) %>">
        <td><%= task_list.title %></td>
        <td><%= task_list.description %></td>
        <td>
          <!-- <a href="">List Items</a> -->
          <%= link_to 'List Items', task_list_list_items_path(task_list) %>
          <%= link_to 'Show', task_list %>
          <%= link_to 'Edit', edit_task_list_path(task_list) %>
          <%= link_to 'Destroy', task_list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

